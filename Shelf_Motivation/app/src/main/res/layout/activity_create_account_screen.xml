<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4e5d7"
    android:weightSum="1">

    <Space
        android:layout_width="match_parent"
        android:layout_height="124dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:weightSum="1">

        <Space android:layout_height="50dp"
            android:layout_width="50dp"
            android:layout_weight="0.21" />

        <TextView
            android:layout_width="277dp"
            android:layout_height="match_parent"
            android:id="@+id/errorMessage" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/namespace" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/name"
            android:layout_weight="0.79"
            android:background="#ffffff" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/usernamespace" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/signupEmail"
            android:layout_weight="0.82"
            android:hint="Email"
            android:background="#ffffff" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>


    <Space
        android:layout_width="413dp"
        android:layout_height="13dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/passwordspace" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textPassword"
            android:hint="Password"
            android:ems="10"
            android:id="@+id/signupPassword"
            android:layout_weight="0.79"
            android:background="#ffffff" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_weight="0.02" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="Create Account"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:id="@+id/createAccount"
            android:layout_weight="0.39"
            android:background="#32684f"
            android:textColor="#ffffff"

            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLogin"
        android:text="Already registered? Click here"
        android:textAlignment="center"
        android:layout_margin="15dp"/>

</LinearLayout>